<div class = "container">
  <div class="wrapper">
    <div action="" name="Login_Form" class="form-signin text-center">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%#= f.label :氏名 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "山田　太郎" %>
          </div>

          <div class="field">
             <%#= f.label :郵便番号 %><br />
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "123-4567" %>
          </div>

          <div class="field">
            <%#= f.label :住所 %><br />
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都板橋区2-1-3 北里コーポレート302号室" %>
          </div>

          <div class="field">
           <%#= f.label :メールアドレス %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "info@mail.com" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "password" %>
           </div>

          <div class="field">
            <%= f.label :確認パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password" %>
          </div>

        <div class="actions"><br />
          <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block"%><br />
          <%= render "devise/shared/links" %>
        </div>
     <% end %>

    </div>
  </div>
</div>
